{
  "name": "2022-patchwork-automata",
  "version": "1.0.0",
  "description": "The main Patchwork Automata website.",
  "scripts": {
    "content-merge": "rimraf content-merged && cpy . '../content-merged/' --cwd=content-public && cpy . '../content-merged/' --cwd=content-private",
    "prepare-toml": "cpy netlify_base.toml . --rename=netlify.toml",
    "build": "npm run content-merge && npm run prepare-toml && npx @11ty/eleventy",
    "start": "npm run content-merge && npm run prepare-toml && npx @11ty/eleventy --serve",
    "dev": "netlify dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author":  {
    "name": "Steven Lehrburger",
    "email": "lehrburger@gmail.com"
  },
  "devDependencies": {
    "netlify-cli": "^6.14.7"
  },
  "dependencies": {
    "rimraf": "^3.0.2",
    "cpy-cli": "^4.1.0",
    "@11ty/eleventy": "^1.0.1",
    "cookie": "^0.4.1",
    "dotenv": "^10.0.0",
    "node-fetch": "^2.3.0",
    "simple-oauth2": "^4.2.0"
  } 
}
